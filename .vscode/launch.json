  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Rails server",
      "type": "Ruby",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "useBundler": true,
      "pathToBundler": "${workspaceRoot}/bin/bundle",
      "pathToRDebugIDE": "${workspaceRoot}/bin/rdebug-ide",
      "program": "${workspaceRoot}/bin/rails",
      "args": [
          "server",
          "-p",
          "3000"
      ]
  }
  ]
}